@model HomeModel;
@{
    ViewData["Title"] = "Home Page";
}
@if(Model.Id == 1){
<div>
    <h1 class="display-4">Valores Recebido pelo Controlador</h1>
    <h5>Nome: @Model.Nome</h5>
    <h5>Email: @Model.Email</h5>
    <h5>Função: @Model.Funcao</h5>
    <h5>Salário: @Model.Salario</h5>
</div>
}else{
    <div>
        <h1 class="display-4">Você não tem permissão pra acessar essa página</h1>
    </div>
}